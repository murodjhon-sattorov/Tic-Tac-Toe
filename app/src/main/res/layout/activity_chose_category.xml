<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ChoseCategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:elevation="50dp"
            android:src="@drawable/x_latter" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:src="@drawable/o_latter" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/click_AI"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="withAi"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/click_btn_ai"
        android:fontFamily="sans-serif-thin"
        android:text="with ai"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/with_a_friend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="withFriend"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/click_btn_friend"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-thin"
        android:text="with a friend"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />


</LinearLayout>